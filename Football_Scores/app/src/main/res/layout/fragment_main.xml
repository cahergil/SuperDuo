<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/list_horizonal_matgin"
    android:layout_marginStart="2dp"
    android:layout_marginRight="@dimen/list_horizonal_matgin"
    android:layout_marginEnd="2dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <ListView
        android:id="@+id/scores_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/fragment_main_divider_height" />

    <TextView
        android:id="@+id/emptyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fragment_main_paddingLeft"
        android:paddingStart="@dimen/fragment_main_paddingLeft"
        android:paddingTop="@dimen/fragment_main_paddingTop"
        android:text="@string/no_matches_for_this_day"
        android:textColor="@color/text_listview_color"
        android:textSize="@dimen/fragment_main_textSize" />
</FrameLayout>
